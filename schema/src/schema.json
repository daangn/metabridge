{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    },
    "queries": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "operationId": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tag": {
            "type": "string"
          },
          "requestBody": {
            "$ref": "http://json-schema.org/draft-07/schema#"
          },
          "response": {
            "$ref": "http://json-schema.org/draft-07/schema#"
          },
          "error": {
            "type": "object",
            "properties": {
              "oneOf": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "reason": {
                      "type": "string"
                    }
                  },
                  "required": ["reason"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["oneOf"],
            "additionalProperties": false
          },
          "minimumSupportAppVersion": {
            "type": "object",
            "properties": {
              "ios": {
                "type": "string",
                "minLength": 5,
                "maxLength": 14,
                "pattern": "^((?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*))|no-support$"
              },
              "android": {
                "type": "string",
                "minLength": 5,
                "maxLength": 14,
                "pattern": "^((?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*))|no-support$"
              }
            },
            "required": ["ios", "android"]
          }
        },
        "required": [
          "operationId",
          "description",
          "requestBody",
          "response",
          "error"
        ],
        "additionalProperties": false
      }
    },
    "subscriptions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "operationId": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tag": {
            "type": "string"
          },
          "requestBody": {
            "$ref": "http://json-schema.org/draft-07/schema#"
          },
          "response": {
            "$ref": "http://json-schema.org/draft-07/schema#"
          },
          "error": {
            "type": "object",
            "properties": {
              "oneOf": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "reason": {
                      "type": "string"
                    }
                  },
                  "required": ["reason"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["oneOf"],
            "additionalProperties": false
          },
          "minimumSupportAppVersion": {
            "type": "object",
            "properties": {
              "ios": {
                "type": "string",
                "minLength": 5,
                "maxLength": 14,
                "pattern": "^((?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*))|no-support$"
              },
              "android": {
                "type": "string",
                "minLength": 5,
                "maxLength": 14,
                "pattern": "^((?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*))|no-support$"
              }
            },
            "required": ["ios", "android"]
          }
        },
        "required": [
          "operationId",
          "description",
          "requestBody",
          "response",
          "error"
        ],
        "additionalProperties": false
      }
    },
    "$defs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "http://json-schema.org/draft-07/schema#"
      }
    }
  },
  "required": ["$schema", "appName", "queries"],
  "additionalProperties": false
}
