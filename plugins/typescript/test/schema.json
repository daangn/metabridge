{
  "$schema": "../../../schema/src/schema.json",
  "appName": "myApp",
  "queries": {
    "STORAGE.GET": {
      "operationId": "getItemFromStorage",
      "description": "Get item from persistent storage",
      "requestBody": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          }
        },
        "required": ["key"],
        "additionalProperties": false
      },
      "response": {
        "$ref": "#/$defs/StringValue"
      },
      "error": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "reason": {
                "type": "string",
                "enum": ["NOT_FOUND"]
              }
            },
            "required": ["reason"],
            "additionalProperties": false
          }
        ]
      },
      "minimumSupportAppVersion": {
        "android": "1.1.1",
        "ios": "1.1.1"
      }
    }
  },
  "subscriptions": {
    "STREAM.SUBSCRIBE": {
      "operationId": "subscribe",
      "description": "Subscribe event",
      "requestBody": {
        "type": "object",
        "required": ["eventName"],
        "properties": {
          "eventName": {
            "type": "string"
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["data"],
        "properties": {
          "data": {
            "type": "string"
          }
        }
      }
    }
  },
  "$defs": {
    "StringValue": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        }
      },
      "required": ["value"],
      "additionalProperties": false
    }
  }
}
